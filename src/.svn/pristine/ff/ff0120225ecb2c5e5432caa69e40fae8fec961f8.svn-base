div.pq-theme *{   
    /*font-family: inherit;*/
    font-size: inherit;
}
.pq-theme .ui-icon{
    display:inline-block;
}
.ui-icon.pq-col-sort-icon{
    vertical-align: bottom;
}
/*hi5 top:4px->2px ����*/
.pq-slider-icon{
    top:2px;
}

.pq-grid-top.ui-widget-header{
    font-weight:normal;
}
.pq-grid-header-search-row{
    font-weight:normal;
}
.pq-ui-button.ui-widget-header{
    background: transparent;
    border-width:0;
    border-radius: 4px;
    margin:1px;
    padding:0 3px;
    cursor:pointer;
    font-size:16px;
}
.pq-ui-button:hover,
.pq-ui-button:focus{
    border-width:1px;
    margin:0;
    outline:none;
}
.pq-cont-lt, .pq-cont-tr,.pq-body-outer .pq-cont-left{
    border-color: #f1f1f4;
}
.pq-grid-cell, .pq-grid-number-cell{
    padding: 3px; 
}
.pq-grid-cell, .pq-grid-row{
    border-color: #f1f1f4;
}
.pq-td-border-right > .pq-grid-row > .pq-grid-cell{
    border-right-color: #f1f1f4;
}
.pq-loading-bg{
    background:#f1f1f4;
}
.pq-grid-bottom select{
    color: initial;
}
.pq-page-current{
    color: initial;
    padding:0 1px;
    text-align:center;
    border-width:1px;
}
.pq-ui-button.disabled{    
    opacity: 0.3;
}
